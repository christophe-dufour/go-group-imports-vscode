{
  "name": "go-group-imports",
  "displayName": "Go Group Imports With Local",
  "description": "VSCode extension for separating imports in go files into four groups: stdlib, 3rdparty, local, own.",
  "version": "0.0.1",
  "publisher": "christophe-dufour",
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#FFE779",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "keywords": [
    "go",
    "imports",
    "group"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:go",
    "onCommand:extension.goGroupImportsWithLocal"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.goGroupImportsWithLocal",
        "title": "Group imports with Local"
      }
    ],
    "configuration": {
      "title": "Group Imports configuration including local",
      "properties": {
        "groupImportsWithLocal.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically group imports with local on save."
        },
        "groupImportsWithLocal.localPackage": {
          "type": "string",
          "description": "Set your organization package for grouping. Eg: github.com/heetch"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/node": "^7.0.43",
    "typescript": "^3.1.2",
    "vscode": "^1.1.21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christophe-dufour/go-group-imports-vscode.git"
  },
  "homepage": "https://github.com/christophe-dufour/go-group-imports-vscode/blob/master/README.md",
  "dependencies": {
    "@types/mocha": "^5.2.5",
    "mocha": "^5.2.0"
  }
}